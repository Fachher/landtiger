{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LPC1768",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "device": "LPC1768",
            "interface": "swd",
            "svdFile": "${workspaceRoot}/LPC1768.svd",
            "executable": "${workspaceRoot}/build/${workspaceRootFolderName}.elf",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build",
            "runToMain": true
        }
    ]
}

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
